---
import Container from "../components/Container.astro";
import Stats from "../components/common/Stats.astro";
import Testimonials from "./HomePageSections/Testimonials.astro";
import CTA from "./common/CTA.astro";
import CardSection from "./common/CardSection.astro";
import Button from "./common/Button.astro";
import Card from "./common/Card.astro";

import aboutSectionImage from "../assets/home/about.jpg";

const services = [
  {
    icon: "ri-palette-line",
    title: "Website Design",
    description:
      "Beautiful, responsive websites that convert visitors into customers",
  },
  {
    icon: "ri-search-line",
    title: "SEO Optimization",
    description: "Get found on Google with our proven SEO strategies",
  },
  {
    icon: "ri-brush-line",
    title: "Branding",
    description: "Create a memorable brand identity that stands out",
  },
  {
    icon: "ri-robot-line",
    title: "Marketing Automation",
    description: "Streamline your marketing with intelligent automation",
  },
];
---

<div>
  <!-- Hero Section -->
  <section class="hero">
    <Container>
      <div class="content">
        <h1 class="title">
          Creative Digital
          <span class="subtitle">Solutions</span>
        </h1>
        <p class="description">
          We design stunning websites, boost your SEO rankings, create memorable
          brands, and automate your marketing for maximum growth
        </p>
        <div class="buttons">
          <Button href="/contact">Start Your Project</Button>
          <Button href="/services" class="secondary">
            View Our Services
          </Button>
        </div>
      </div>
    </Container>
  </section>

  <!-- Services Section -->
  <CardSection
    title="Our Services"
    description="From concept to launch, we provide comprehensive digital solutions that drive results for your business"
    data={services}
  >
    <Fragment slot="cards">
      {
        services.map(
          (service: { icon: string; title: string; description: string }) => {
            return (
              <Card
                icon={service.icon}
                title={service.title}
                description={service.description}
              />
            );
          }
        )
      }
    </Fragment>
    <div slot="actions" class="buttons" style="margin-top: 2rem;">
      <Button href="/services">View All Services</Button>
    </div>
  </CardSection>

  <!-- About Section -->
  <Stats
    title="Why Choose Us?"
    description="With over 8 years of experience in digital marketing and web development, we've helped hundreds of businesses achieve their online goals. Our team combines creativity with technical expertise to deliver exceptional results."
    stats={[
      { label: "Projects Completed", value: "500+" },
      { label: "Client Satisfaction", value: "98%" },
      { label: "Years of Experience", value: "8+" },
      { label: "Support", value: "24/7" },
    ]}
    sectionImg={aboutSectionImage.src}
    hasGreyBg
  >
    <Button href="/about"> Learn More About Us </Button>
  </Stats>

  <!-- Testimonials Section -->
  <Testimonials />

  <!-- Call to Action Section -->
  <CTA
    title="Ready to Grow Your Business?"
    description="Let's discuss your project and create a digital solution that drives real results. Get a free consultation today!"
  >
    <Button href="/contact" class="secondary">Get Free Consultation</Button>
  </CTA>
</div>

<style>
  .hero {
    background-image: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)),
      url("../assets/home/hero.jpg");
    background-size: cover;
    background-position: center;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .content {
    text-align: center;
    color: white;
  }

  .title {
    font-size: 4.5rem;
    line-height: 1;
    margin-bottom: 1.5rem;
  }

  .subtitle {
    display: block;
    color: #60a5fa;
  }

  .description {
    font-size: 1.5rem;
    line-height: 2rem;
    font-weight: 300;
    color: #e5e7eb;
    max-width: 48rem;
    margin-bottom: 2rem;
    margin-left: auto;
    margin-right: auto;
  }

  .buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    align-items: center;
  }

  @media (max-width: 768px) {
    .title {
      font-size: 3rem;
    }

    .description {
      font-size: 1.1rem;
    }

    .buttons {
      flex-direction: column;
      gap: 0.5rem;
    }
  }
</style>
