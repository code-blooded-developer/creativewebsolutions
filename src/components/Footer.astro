---
import Container from "./Container.astro";
import Logo from "./common/Logo.astro";
---

<footer>
  <Container>
    <div class="container">
      <div class="footer-content">
        <Logo />
        <p>
          We create stunning websites and digital experiences that drive results
          for your business. From design to development, SEO to marketing
          automation - we've got you covered.
        </p>
        <div class="social-icons">
          <a
            href="https://www.facebook.com/creativewebsolutions"
            target="_blank"
            rel="noopener noreferrer"
            class="social-icon-link"
          >
            <i style="font-size: 1.125rem;" class="ri-facebook-fill"></i>
          </a>
          <a
            href="https://www.instagram.com/creativewebsolutions"
            target="_blank"
            rel="noopener noreferrer"
            class="social-icon-link"
          >
            <i style="font-size: 1.125rem;" class="ri-instagram-fill"></i>
          </a>
          <a
            href="https://www.linkedin.com/company/creativewebsolutions"
            target="_blank"
            rel="noopener noreferrer"
            class="social-icon-link"
          >
            <i style="font-size: 1.125rem;" class="ri-linkedin-box-fill"></i>
          </a>
          <a
            href="https://www.twitter.com/creativewebsolutions"
            target="_blank"
            rel="noopener noreferrer"
            class="social-icon-link"
          >
            <i style="font-size: 1.125rem;" class="ri-twitter-fill"></i>
          </a>
        </div>
      </div>
      <div>
        <h3 class="footer-heading">Services</h3>
        <ul class="services-list">
          <li>
            <a class="service-link" href="/services">Website Design</a>
          </li>
          <li>
            <a class="service-link" href="/services">SEO Optimization</a>
          </li>
          <li>
            <a class="service-link" href="/services">Branding</a>
          </li>
          <li>
            <a class="service-link" href="/services">Marketing Automation</a>
          </li>
        </ul>
      </div>
      <div>
        <h3 class="footer-heading">Company</h3>
        <ul class="services-list">
          <li>
            <a class="service-link" href="/about">About Us</a>
          </li>
          <li>
            <a class="service-link" href="/blog">Blog</a>
          </li>
          <li>
            <a class="service-link" href="/contact">Contact Us</a>
          </li>
          <li>
            <a class="service-link" href="/privacy">Privacy Policy</a>
          </li>
          <li>
            <a class="service-link" href="/terms">Terms of Service</a>
          </li>
          <li>
            <a class="service-link" href="/cookies">Cookie Policy</a>
          </li>
        </ul>
      </div>
    </div>
    <div class="footer-bottom">
      <p class="copyright-text footer-bottom-text">
        &copy; 2025 Creative Web Solutions. All rights reserved.
      </p>
      <div class="footer-links">
        <a class="service-link footer-bottom-text" href="/privacy">Privacy</a>
        <a class="service-link footer-bottom-text" href="/terms">Terms</a>
        <a class="service-link footer-bottom-text" href="/cookies">Cookies</a>
      </div>
    </div>
  </Container>
</footer>

<style>
  footer {
    background-color: #111827;
    color: white;
    padding-top: 3rem;
    padding-bottom: 3rem;
  }

  .container {
    display: grid;
    grid-template-columns: repeat(4, minmax(0, 1fr));
    gap: 2rem;
  }

  .footer-content {
    grid-column: span 2 / span 2;
  }

  p {
    color: #9ca3af;
    max-width: 30rem;
    margin-bottom: 1.5rem;
    font-weight: 300;
  }

  .social-icons {
    display: flex;
    gap: 1rem;
  }

  .social-icon-link {
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 9999px;
    width: 2.5rem;
    height: 2.5rem;
    background-color: #2563eb;
    color: white;
  }

  .footer-heading {
    font-size: 1.125rem;
    line-height: 1.75rem;
    font-weight: 600;
  }

  .services-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .service-link {
    text-decoration: none;
    color: #9ca3af;
    font-weight: 300;
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 2rem;
    border-top: 1px solid #1f2937;
    padding-top: 1rem;
  }

  .footer-bottom-text {
    font-size: 0.875rem;
  }

  .footer-links {
    display: flex;
    gap: 1rem;
  }

  @media (max-width: 768px) {
    .footer-container {
      padding: 1.5rem;
    }

    .container {
      grid-template-columns: repeat(1, minmax(0, 1fr));
    }

    .footer-content {
      grid-column: span 1;
      text-align: center;
    }

    .social-icons {
      justify-content: center;
    }

    .footer-bottom {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }

    .footer-links {
      justify-content: center;
    }
  }
</style>
