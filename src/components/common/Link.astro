---
const { href, title } = Astro.props;
---

<a class="nav-link" href={href}>
  {title}
</a>

<style>
  .nav-link {
    text-decoration: none;
    color: #374151;
    font-size: 0.875rem;
    line-height: 1.5rem;
    padding: 0.5rem 0.75rem;
  }
  .nav-link:hover {
    color: #2563eb;
  }

  @media (max-width: 768px) {
    .nav-link {
      font-size: 1rem;
    }
  }
</style>
