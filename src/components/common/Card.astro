---
const { icon, title, description } = Astro.props;
---

<div class="card">
  <div class="card-icon">
    <i class={icon}></i>
  </div>
  <h3 class="card-title">{title}</h3>
  <p class="card-description">{description}</p>
</div>

<style>
  .card {
    padding: 2rem;
    background: #f9fafb;
    border-radius: 0.75rem;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .card:hover {
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .card-icon {
    font-size: 1.5rem;
    color: #2563eb;
    background: #dbeafe;
    margin-bottom: 1.5rem;
    border-radius: 9999px;
    width: 4rem;
    height: 4rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .card-title {
    color: #111827;
    font-size: 1.25rem;
    line-height: 1.75rem;
    font-weight: 600;
    margin-bottom: 1rem;
    opacity: 0.8;
  }

  .card-description {
    color: #4b5563;
    line-height: 1.5rem;
    opacity: 0.8;
    text-align: center;
  }
</style>
