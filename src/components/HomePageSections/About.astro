---
import aboutSectionImage from "../../assets/about-section.jpg";
---

<section class="about">
  <div class="container">
    <div class="content">
      <div>
        <h2 class="section-title">Why Choose Us?</h2>
        <p class="section-description">
          With over 8 years of experience in digital marketing and web
          development, we've helped hundreds of businesses achieve their online
          goals. Our team combines creativity with technical expertise to
          deliver exceptional results.
        </p>
        <div class="stats">
          <div class="stat">
            <div class="number">500+</div>
            <div class="label">Projects Completed</div>
          </div>
          <div class="stat">
            <div class="number">98%</div>
            <div class="label">Client Satisfaction</div>
          </div>
          <div class="stat">
            <div class="number">8+</div>
            <div class="label">Years of Experience</div>
          </div>
          <div class="stat">
            <div class="number">24/7</div>
            <div class="label">Support</div>
          </div>
        </div>
        <a href="/about" class="button">Learn More About Us</a>
      </div>
      <div>
        <img
          src={aboutSectionImage.src}
          alt="Our Team"
          class="about-image"
          loading="lazy"
        />
      </div>
    </div>
  </div>
</section>

<style>
  .about {
    padding: 4rem 0;
    background-color: #f9fafb;
  }

  .container {
    padding-left: 2rem;
    padding-right: 2rem;
    margin-left: auto;
    margin-right: auto;
    max-width: 100rem;
  }

  .content {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 3rem;
    align-items: center;
  }

  .services-content {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-title {
    font-size: 3rem;
    margin-bottom: 1.5rem;
    color: #111827;
  }

  .section-description {
    font-size: 1.125rem;
    color: #4b5563;
    margin-bottom: 2rem;
  }

  .button {
    text-decoration: none;
    color: white;
    background-color: #2563eb;
    padding-top: 1rem;
    padding-bottom: 1rem;
    padding-left: 2rem;
    padding-right: 2rem;
    border-radius: 9999px;
    white-space: nowrap;
    font-size: 1.125rem;
  }

  .button:hover {
    background-color: #1d4ed8;
  }

  .stats {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .stat {
    text-align: center;
  }

  .number {
    font-size: 1.875rem;
    color: #2563eb;
    margin-bottom: 0.5rem;
  }

  .label {
    color: #4b5563;
  }

  .about-image {
    object-fit: cover;
    border-radius: 0.75rem;
    width: 100%;
    height: 24rem;
    box-shadow:
      rgba(0, 0, 0, 0) 0px 0px 0px 0px,
      rgba(0, 0, 0, 0) 0px 0px 0px 0px,
      rgba(0, 0, 0, 0.1) 0px 10px 15px -3px,
      rgba(0, 0, 0, 0.1) 0px 4px 6px -4px;
  }

  @media (max-width: 768px) {
    .about {
      padding: 2rem 0;
    }

    .content {
      grid-template-columns: 1fr;
    }

    .about-image {
      height: 18rem;
    }
  }
</style>
