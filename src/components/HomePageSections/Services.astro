---
import Container from "../../components/Container.astro";
import ServiceCard from "../ServiceCard.astro";
import SectionHeader from "../common/SectionHeader.astro";
import Button from "../common/Button.astro";

const services = [
  {
    icon: "ri-palette-line",
    title: "Website Design",
    description:
      "Beautiful, responsive websites that convert visitors into customers",
  },
  {
    icon: "ri-search-line",
    title: "SEO Optimization",
    description: "Get found on Google with our proven SEO strategies",
  },
  {
    icon: "ri-brush-line",
    title: "Branding",
    description: "Create a memorable brand identity that stands out",
  },
  {
    icon: "ri-robot-line",
    title: "Marketing Automation",
    description: "Streamline your marketing with intelligent automation",
  },
];
---

<section class="services">
  <Container>
    <SectionHeader
      title="Our Services"
      description="From concept to launch, we provide comprehensive digital solutions that drive results for your business"
    />
    <div class="services-grid">
      {
        services.map((service) => {
          return (
            <ServiceCard
              icon={service.icon}
              title={service.title}
              description={service.description}
            />
          );
        })
      }
    </div>
    <div class="buttons" style="margin-top: 2rem;">
      <Button href="/services">View All Services</Button>
    </div>
  </Container>
</section>

<style>
  .services {
    padding-top: 5rem;
    padding-bottom: 5rem;
    background-color: white;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(4, minmax(0, 1fr));
    gap: 2rem;
  }

  .buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    align-items: center;
  }

  @media (max-width: 768px) {
    .services-grid {
      grid-template-columns: repeat(1, minmax(0, 1fr));
    }
  }

  @media (min-width: 769px) and (max-width: 1024px) {
    .services-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }
</style>
